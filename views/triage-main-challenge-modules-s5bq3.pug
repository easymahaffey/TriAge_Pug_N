    p#answer Answer below:
    form(action="/secureMainChallengeModulesS5bq3/" + id method="post")
      input(type="text" name="student_id" value=student_id hidden)
      input(type="text" name="answerDate" hidden)
      input(type="text" name="questionGroupModule" value="Challenge" hidden)
      input(type="text" name="questionModule" value="5b" hidden)
      input(type="text" name="questionTitle" value="S5bQ3" hidden)
      input(type="text" name="answerTime" hidden)
      input(type="text" name="questionNumber" value="Q3" hidden)
      input(type="text" name="questionText" value="When I am becoming pessimistic or negative about the future, doing these things helps me become more optimistic:" hidden)
      input.answerArea(type="textarea" name="answerText" placeholder="Answer 3 of 4")
      br
      button.btn.btn-primary.btn-lg.btn-module(type="submit") Submit
    br

