        b
        label(for="info") Services Information: #{ info }
        br
        textarea(name="info" rows="5" cols="30" placeholder="Enter Additional Information")
        hr
        br        
        p 
        p Profile privacy setting
        input(type="checkbox" name="vendor_privacy" value="Public")
        label(for="vendor_privacy") Public Profile
        br
        input(type="checkbox" name="vendor_privacy" value ="Private")
        label(for="vendor_privacy") Private Profile 
        p Current privacy setting
          strong  :
          br
          u
            strong #{ vendor_privacy }
        p 
        p Profile service status setting
        input(type="checkbox" name="vendor_status" placeholder="vendor_status setting" value="Active")
