        button.btn.btn-primary.btn-lg#password-btn(type="button" data-toggle="modal" data-target="#passwordModal") Change password
        br
        label(for="password") Hashed Password:  
        p #{ password }
        br
        p Joined: #{ date_organization_joined }
        br
        label(for="organization_name") Organization Name: #{ organization_name }
        input(type="text" name="organization_name" placeholder="Organization Name")
        br
        label(for="org_branch") Branch Name: #{ org_branch }
        input(type="text" name="org_branch" placeholder="Branch Name")
        br
        label(for="org_email") Organization E-mail: #{ org_email }
        input(type="text" name="org_email" placeholder="Organization E-mail")
        br
