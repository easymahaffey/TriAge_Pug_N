block append section
  link(rel="stylesheet" href="/assets/css/module_content.css")
  section.container-2
    h2 TriAge Peer Training (S7aQ4)
    h3 Health Risk, Screening, and Shared Decision-Making
    p Student Id: #{ student_id }
    br
    h3 Health Risk
    br
    h4 Question 4 of 4
      //- span#timerDisplay Time remaining: #{ timer }
    br
    p#question What tests were done?
    br
    p#answer Answer below:
    form(action="/secureMainPeerTrainingModulesS7aq4/" + id method="post")
      input(type="text" name="student_id" value=student_id hidden)
      input(type="text" name="answerDate" hidden)
      input(type="text" name="questionGroupModule" value="Peer Training" hidden)
      input(type="text" name="questionModule" value="7a" hidden)
      input(type="text" name="questionTitle" value="S7aQ4" hidden)
      input(type="text" name="answerTime" hidden)
      input(type="text" name="questionNumber" value="Q4" hidden)
      input(type="text" name="questionText" value="What tests were done?" hidden)
      input.answerArea(type="textarea" name="answerText" placeholder="Answer 4 of 4")
      br
      button.btn.btn-primary.btn-lg.btn-module(type="submit") Submit
    br